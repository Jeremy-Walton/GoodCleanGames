<div class="Sign">
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="Game"><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true, class: 'Input' %></div>

    <div class="Game"><%= f.label :password %><br />
    <%= f.password_field :password, class: 'Input' %></div>

    <% if devise_mapping.rememberable? -%>
      <div class="Game"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div class="Game"><%= f.submit "Sign in", class: "Input" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>