source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.3'
ruby '2.1.1'

# Use sqlite3 as the database for Active Record

gem 'sass-rails'
gem 'slim-rails'

gem 'pg'
gem 'devise'

gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'
gem 'pusher'

group :development, :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'poltergeist'
  gem 'jasmine-rails'
  gem 'spinach-rails'
  gem 'pry-rails'
  gem 'pry-debugger'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :production do
  gem 'rails_12factor'
end

